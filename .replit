modules = ["nodejs-20", "web"]
[agent]
expertMode = true
integrations = ["replitmail:1.0.0", "javascript_sendgrid:1.0.0"]

[nix]
channel = "stable-25_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Backend API"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Frontend Server"

[[workflows.workflow]]
name = "Backend API"
author = "agent"

[workflows.workflow.metadata]
outputType = "console"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run backend"
waitForPort = 3001

[[workflows.workflow]]
name = "Frontend Server"
author = "agent"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"
waitForPort = 5000

[workflows.workflow.metadata]
outputType = "webview"

[[ports]]
localPort = 3001
externalPort = 3001

[[ports]]
localPort = 5000
externalPort = 80

[[ports]]
localPort = 8080
externalPort = 8080

[[ports]]
localPort = 33159
externalPort = 3000

[[ports]]
localPort = 41403
externalPort = 3001

[[ports]]
localPort = 42091
externalPort = 3002

[deployment]
deploymentTarget = "autoscale"
run = ["bash", "-c", "npx vite preview --host 0.0.0.0 --port $PORT"]
build = ["npm", "run", "build"]
